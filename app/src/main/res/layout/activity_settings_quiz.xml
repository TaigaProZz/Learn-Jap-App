<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kanjikana.Quiz.SettingsQuiz">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        tools:layout_editor_absoluteX="-66dp"
        tools:layout_editor_absoluteY="3dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <TextView
            android:id="@+id/goingBackArrow"
            android:layout_width="36dp"
            android:layout_height="65dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/test_quiz"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/goingBackArrow"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="54dp"
                android:layout_height="47dp"
                android:layout_marginStart="300dp"
                android:background="@drawable/background_circle"
                android:gravity="center"
                android:text="@string/help"
                android:textColor="@color/black_grey"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/goingBackArrow"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/hiragana_level1"
        android:background="@drawable/background_button_rectangle_purple200"
        android:textColor="@color/black"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="144dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/hiragana_niveau_1"
        android:gravity="center"

        />

    <Button
        android:background="@drawable/background_button_rectangle_purple200"
        android:textColor="@color/black"
        android:id="@+id/hiragana_level2"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="284dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/hiragana_niveau_2"
        />

    <Button
        android:background="@drawable/background_button_rectangle_purple200"
        android:textColor="@color/black"
        android:id="@+id/hiragana_level3"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="424dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/hiragana_niveau_3"
        />

    <Button
        android:background="@drawable/background_button_rectangle_purple200"
        android:textColor="@color/black"
        android:id="@+id/katakana_level1"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/katakana_niveau_1"
        />

    <Button
        android:background="@drawable/background_button_rectangle_purple200"
        android:textColor="@color/black"
        android:id="@+id/katakana_level2"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/katakana_niveau_2"
        />

    <Button
        android:background="@drawable/background_button_rectangle_purple200"
        android:textColor="@color/black"
        android:id="@+id/katakana_level3"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/katakana_niveau_3"
        />



</androidx.constraintlayout.widget.ConstraintLayout>